{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "mcq.schema.json",
  "title": "Multiple Choice Exercise",
  "type": "object",
  "required": ["type", "slug", "items"],
  "properties": {
    "type": { "const": "mcq" },
    "slug": { "type": "string", "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$" },
    "title_es": { "type": "string" },
    "title_en": { "type": "string" },
    "instructions_es": { "type": "string" },
    "instructions_en": { "type": "string" },
    "level": { "type": ["string", "null"] },
    "items": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "order"],
        "properties": {
          "id": { "type": ["string", "number"] },
          "order": { "type": "integer" },
          "question_es": { "type": "string" },
          "question_en": { "type": "string" },
          "options_es": {
            "type": "array",
            "items": { "$ref": "#/definitions/option" }
          },
          "options_en": {
            "type": "array",
            "items": { "$ref": "#/definitions/option" }
          },
          "options": {
            "type": "array",
            "items": { "$ref": "#/definitions/option" }
          },
          "hint_es": { "type": ["string", "null"] },
          "hint_en": { "type": ["string", "null"] }
        },
        "allOf": [
          { "anyOf": [
            { "required": ["question_es"] },
            { "required": ["question_en"] }
          ]},
          { "anyOf": [
            { "required": ["options_es"] },
            { "required": ["options_en"] },
            { "required": ["options"] }
          ]}
        ]
      }
    }
  },
  "definitions": {
    "option": {
      "type": ["object", "string"],
      "properties": {
        "text": { "type": "string" },
        "correct": { "type": "boolean" },
        "feedback": { "type": ["string", "null"] }
      }
    }
  },
  "allOf": [
    { "anyOf": [ { "required": ["title_es"] }, { "required": ["title_en"] } ] },
    { "anyOf": [ { "required": ["instructions_es"] }, { "required": ["instructions_en"] } ] }
  ]
}

