{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://profepanda.local/schemas/exercises/tf.schema.json",
  "title": "Exercise: True/False",
  "type": "object",
  "required": ["type", "slug", "items"],
  "properties": {
    "type": { "const": "tf" },
    "slug": { "type": "string", "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$" },
    "title_es": { "type": "string" },
    "title_en": { "type": "string" },
    "instructions_es": { "type": "string" },
    "instructions_en": { "type": "string" },
    "level": { "type": "string" },
    "taxonomy_paths": { "type": "array", "items": { "type": "string" } },
    "items": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["order", "answer"],
        "properties": {
          "order": { "type": "integer", "minimum": 1 },
          "statement_es": { "type": "string" },
          "statement_en": { "type": "string" },
          "answer": { "enum": ["true", "false"] },
          "hint_es": { "type": "string" },
          "hint_en": { "type": "string" },
          "feedback_correct_es": { "type": "string" },
          "feedback_correct_en": { "type": "string" },
          "feedback_incorrect_es": { "type": "string" },
          "feedback_incorrect_en": { "type": "string" }
        }
      }
    }
  }
}
